<h3>Your Site Token is <code><%= @site.guid %></code></h3>

<h3>
  <%= link_to "Confirm Installation?", confirm_site_path(@site), method: :post %>
</h3>

<%= render "install_widget" %>

<%= simple_form_for @site do |f| %>
  <%= f.input :name, wrapper_html: {class: 'form-group'}, input_html: {class: "form-control"} %>
  <%= f.input :url, as: :url, wrapper_html: {class: 'form-group'}, input_html: {class: "form-control"} %>
  <%= f.button :submit, class: 'btn btn-default' %>
<% end %>
